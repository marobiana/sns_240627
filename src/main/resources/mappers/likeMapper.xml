	<!-- count 쿼리를 하나로 합친다. -->
	<select id="selectLikeCountByPostIdOrUserId" parameterType="map" resultType="int">
		SELECT
			COUNT(1)
		FROM
			`like`
		WHERE
			`postId` = #{postId}
			<if test="userId != null">
			AND `userId` = #{userId}
			</if>
	</select>
	
	<!-- insert -->
	<insert id="insertLike" parameterType="map">
		INSERT INTO `like`
		(
			`postId`
			, `userId`
			, `createdAt`
		)
		VALUES
		(
			#{postId}
			, #{userId}
			, NOW()
		)
	</insert>
	
	<!-- delete -->
	<delete id="deleteLikeByPostIdUserId" parameterType="map">
		DELETE
		FROM
			`like`
		WHERE
			`postId` = #{postId}
			AND `userId` = #{userId}
	</delete>

	<delete id="deleteLikeListByPostId" parameterType="int">
		DELETE
		FROM
			`like`
		WHERE
			`postId` = #{postId}
	</delete>
